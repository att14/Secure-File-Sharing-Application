    private void addButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_addButtonActionPerformed
        String groupName = groupNameField.getText();
        String username = usernameField.getText();

        boolean createSuccess = gClient.addUserToGroup(username, groupName, userToken);
        if(createSuccess){
            System.out.println("User " + username + " successfully added to group " + groupName);
        }else{
            System.out.println("Failed to add user " + username + " to group " + groupName);
        }
    }//GEN-LAST:event_addButtonActionPerformed

